<h1><%= @article.title %></h1>

<%= bootstrap_form_for @article do |f| %>
  <%= f.text_field :intro, label: "Write an introduction" %>
  <%= render "iframe", src: @article.iframe_link %>
  <%= f.text_field :outro, label: "Write an outro:" %>
  <%= f.primary %>
<% end %>

<div class="mb-4">
  <%= link_to "Delete Article", @article, method: :delete, data: { confirm: "Really?" } %>
</div>
