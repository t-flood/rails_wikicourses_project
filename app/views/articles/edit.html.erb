<% @course.articles.each do |article| %>
  <h1><%= article.title %></h1>
<% end %>

<%= bootstrap_form_for [@course, @article] do |f| %>
  <%= f.text_field :intro, label: "Write an introduction" %>
  <%= render "iframe", src: @article.iframe_link %>
  <%= f.text_field :outro, label: "Write an outro:" %>
  <%= f.primary %>
<% end %>
